{
  "manifest_version": 3,
  "name": "Browser Console Capture",
  "version": "1.0",
  "description": "Captures console logs from websites and sends them to Cursor IDE",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon.svg"
  },
  "icons": {
    "128": "images/icon.svg"
  }
}
